@model MiniCrm.Web.ViewModels.Customer.AddCustomerModel
@{
    ViewData["Title"] = "Add Customer";
}

<div asp-validation-summary="All"></div>

<form method="post">
    <div class="form-group row">
        <label asp-for="Customer.Name" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer.Name" class="form-control" />
            <span asp-validation-for="Customer.Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Customer.Email" class="col-sm-2 col-form-label font-weight-bold"></label>
        <div class="col-sm-10">
            <input asp-for="Customer.Email" class="form-control" />
            <span asp-validation-for="Customer.Email"></span>
        </div>
    </div>

    <fieldset class="form-group">
        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0 font-weight-bold">Phone</legend>
            <div class="form-group col">
                <label asp-for="Customer.Phone.Number"></label>
                <input asp-for="Customer.Phone.Number" class="form-control" />
                <span asp-validation-for="Customer.Phone.Number"></span>
            </div>
            <div class="form-group col">
                <label asp-for="Customer.Phone.Extension"></label>
                <input asp-for="Customer.Phone.Extension" class="form-control" />
                <span asp-validation-for="Customer.Phone.Extension"></span>
            </div>
        </div>
    </fieldset>

    <fieldset class="form-group">

        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0 font-weight-bold">Address</legend>
            <div class="col-sm-10">
                <div class="form-group">
                    <label asp-for="Customer.Address.Line1">Line 1</label>
                    <input asp-for="Customer.Address.Line1" class="form-control" />
                    <span asp-validation-for="Customer.Address.Line1"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Customer.Address.Line2">Line 2</label>
                    <input asp-for="Customer.Address.Line2" class="form-control" />
                    <span asp-validation-for="Customer.Address.Line2"></span>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="Customer.Address.City"></label>
                        <input asp-for="Customer.Address.City" class="form-control" />
                        <span asp-validation-for="Customer.Address.City"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Customer.Address.State"></label>
                        <select asp-for="Customer.Address.State" asp-items="Model.States" class="form-control"></select>
                        <span asp-validation-for="Customer.Address.State"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Customer.Address.PostalCode">Postal Code</label>
                        <input asp-for="Customer.Address.PostalCode" class="form-control" />
                        <span asp-validation-for="Customer.Address.PostalCode"></span>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>